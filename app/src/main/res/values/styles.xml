<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="snackbarStyle">@style/Widget.CustomSnackbar</item>
    </style>
    <style name="Widget.CustomSnackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="animationMode">slide</item>
    </style>
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen_bg</item>
        <item name="backgroundColor">@color/splashscreenPrimaryColor</item>
        <item name="android:navigationBarColor">@color/splashscreenPrimaryDarkColor</item>
        <item name="colorPrimary">@color/splashscreenPrimaryColor</item>
        <item name="colorPrimaryDark">@color/splashscreenPrimaryColor</item>
        <item name="colorAccent">@color/splashscreenAccentColor</item>
        <item name="snackbarStyle">@style/Widget.CustomSnackbar</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/colorDivider</item>
    </style>
    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="NumPad_DIGITS" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">@null</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:backgroundTint">@color/elementBackground</item>
    </style>
</resources>